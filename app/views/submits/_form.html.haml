= form_for @submit do |f|
  - if @submit.errors.any?
    #error_explanation
      %h2= "#{pluralize(@submit.errors.count, "error")} prohibited this submit from being saved:"
      %ul
        - @submit.errors.full_messages.each do |msg|
          %li= msg

  .field
    = f.label :user_id
    = f.number_field :user_id
  .field
    = f.label :course_id
    = f.number_field :course_id
  .field
    = f.label :position
    = f.text_field :position
  .actions
    = f.submit 'Save'
