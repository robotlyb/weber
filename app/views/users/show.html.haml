-content_for :body do
  %section#about.wrap.about.role.clearfix
    .content
      .course.courses-role
        .full
          .course
            .screenshot1#role-screenshot1
              .edit-course-poster(style="margin-bottom:5px;")
                %p 头像
                .poster-preview
                  = image_tag("#{@user.avatar}", :id => "poster")
            .course-main(style="height: 490px;")
              .row.span6(style="margin-top:100px;")
                %ul
                  %li 姓名：#{@user.name} 
                  %br
                  %li 邮箱：#{@user.email}
                  %br
                  %li 学号：#{@user.cad_id}
                .control-group
                  =link_to "编辑",  user_edit_path, :class => "btn btn-success"
