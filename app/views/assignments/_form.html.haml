= form_for @assignment do |f|
  - if @assignment.errors.any?
    #error_explanation
      %h2= "#{pluralize(@assignment.errors.count, "error")} prohibited this assignment from being saved:"
      %ul
        - @assignment.errors.full_messages.each do |msg|
          %li= msg

  .field
    = f.label :course_id
    = f.number_field :course_id
  .field
    = f.label :user_id
    = f.number_field :user_id
  .field
    = f.label :content
    = f.text_area :content
  .field
    = f.label :feedback_id
    = f.number_field :feedback_id
  .actions
    = f.submit 'Save'
